<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgBg"
            android:layout_width="412dp"
            android:layout_height="197dp"
            android:scaleType="center"
            app:srcCompat="@mipmap/stu_bg" />
        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="129dp"
            android:layout_height="150dp"
           android:layout_gravity="right|bottom"
            app:srcCompat="@mipmap/user" />

        <TextView
            android:id="@+id/txTitle"
            android:layout_width="186dp"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
           android:layout_gravity="left|bottom"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Person \nInformation"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="20dp"
       >

        <TextView
            android:id="@+id/txID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:text="StudentsID"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txStudentsID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Fiona"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Age"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txAge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:text="20"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txBatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Batch"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txBatch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:text="one"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/txAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:text="Address"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="1"
            android:text="Hainan University"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/txEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="0"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txEmail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="1"
            android:text="fiona@qq.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="12"
            android:layout_column="0"
            android:text="Contact Number"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txContactNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="12"
            android:layout_column="1"
            android:text="13344447777"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="fill"
            android:padding="16dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit"
            app:iconTint="#FFFFFF"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="14"
            android:padding="14dp"
            android:layout_gravity="fill"
            android:layout_margin="16dp"
            />
        <Button
            android:id="@+id/btAsk"
            android:layout_row="16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask for Leave"
            android:layout_columnSpan="2"
            android:layout_margin="16dp"
            android:padding="14dp"
            android:layout_gravity="fill"
            android:gravity="center"
            />
    </GridLayout>

</LinearLayout>
</ScrollView>