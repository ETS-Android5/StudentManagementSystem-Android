<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdministratorActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/amdin_bg" />


    <TextView
        android:id="@+id/txTitle"
        android:layout_width="186dp"
        android:layout_height="64dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Students \nList"
        android:textColor="#404040"
        android:textSize="24sp"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/txTitle2"
            android:layout_width="186dp"
            android:layout_height="64dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Click To Edit/Delet"
            android:layout_gravity="right"
            android:textColor="#404040"
            android:textSize="24sp"
            android:textStyle="bold"
            />


   </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/stuLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fastScrollEnabled="true" />
        </LinearLayout>
        <Button
            android:id="@+id/btCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Check Students Leave" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:src="@android:drawable/ic_input_add" />
    </FrameLayout>
</LinearLayout>